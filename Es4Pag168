package esercizio1;
import java.util.Scanner;
public class esercizio1 {
	public static void main(String[] args) {
		Scanner tastiera = new Scanner(System.in);
		int numero1;
		int numero2;
		int numero3;
		int numero4;
		double media;
		int massimo1=0;
		int massimo2=0;
		int minimo1=0;
		int minimo2=0;
		System.out.println("Inserisci 4 numeri interi positivi e io ti dirò il numero più alto, più basso e la media");
			numero1=tastiera.nextInt();
			numero2=tastiera.nextInt();
			numero3=tastiera.nextInt();
			numero4=tastiera.nextInt();
			massimo1=Math.max(numero1, numero2);
			massimo2=Math.max(numero3, numero4);
			if (massimo1>massimo2) 
			System.out.println("il numero più alto è " + massimo1);
			else
				System.out.println("il numero più alto è " + massimo2);
			minimo1=Math.min(numero1, numero2);
			minimo2=Math.min(numero3, numero4);
			if (minimo1<minimo2)
				System.out.println("il numero più basso è " + minimo1);
			else System.out.println("il numero più basso è " + minimo2);
			media=(numero1+numero2+numero3+numero4)/4;
			System.out.println("la media è " + media);
	}
}
