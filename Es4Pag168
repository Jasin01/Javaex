package primo_programma;
import java.util.Scanner;

public class prova
{
	public static void main(String[] args) 
	{
		Scanner tastiera = new Scanner(System.in);
		
		int n1,n2,n3,n4,massimo1,massimo2; 

		double media;
	
		int minimo1,minimo2;
		
		System.out.println("Inserisci 4 numeri interi positivi e io ti dirò il numero più alto, più basso e la media");
		
		n1 = tastiera.nextInt();    //leggo da tastiera e assegno alle variabili
		n2 = tastiera.nextInt();
		n3 = tastiera.nextInt();
		n4 = tastiera.nextInt();
		
		media = (n1+n2+n3+n4)/4;
		
		massimo1 = Math.max(n1, n2);
		massimo2 = Math.max(n3, n4);
		
		minimo1 = Math.min(n1, n2);
		minimo2 = Math.min(n3, n4);
		
		if (massimo1>massimo2)
			{
				System.out.println("il numero più alto è " + massimo1);
			}
		
		else
			{
				System.out.println("il numero più alto è " + massimo2);
			}
	
		
		if (minimo1<minimo2)
			{
				System.out.println("il numero più basso è " + minimo1);
			}
		
		else 
			{
				System.out.println("il numero più basso è " + minimo2);
			}
		
		System.out.println("la media è " + media);	
	
	}
}
