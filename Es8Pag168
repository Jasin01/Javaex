import java.util.Scanner;
public class Es8Pag168 
{
        public static void main(String[] args)
        {
        	Scanner tastiera=new Scanner(System.in);
        	
        	String parola="", parolaB="";
        	int s;
        	
        	System.out.println("Scrivi una parola e ti dirò se è palindroma");
        	
        	parola=tastiera.nextLine();
        	
        	s=parola.length();
        	
        	for (int i=s-1; i>=0; i--)
        		
        	{
        		parolaB=parolaB+parola.charAt(i);
        		
        	}
        	
        	if(parola.equalsIgnoreCase(parolaB))	
                {
                        System.out.println("la parola messa è palindroma");
                }
                
                else
                {
                        System.out.println("la parola messa non è palindroma");
                }
        }
}
